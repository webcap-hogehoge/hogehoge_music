<%= render 'shared/header_user_before_login' %>

　	<div class="container">
		<div class="row">
			<div class="col-xs-5">
				<%= image_tag @product.image_id.url, size:'300x300' %>
			</div>
			<div class="col-xs-7">
					<div>
						<%= @product.cd_name %>
					</div><br>
					<div>
						<%= @product.label.label_name %>
					<div><br>
						￥<%= @product.price %>（税込価格）
					</div>
				<br>

				<div>
				<select name="数量" required>
		          	<option value="1" selected="true">1</option>
			        <option value="2">2</option>
			        <option value="3">3</option>
			        <option value="4">4</option>
			        <option value="5">5</option>
			        <option value="6">6</option>
			        <option value="7">7</option>
			        <option value="8">8</option>
			        <option value="9">9</option>
			        <option value="10">10</option>
				</select>
				</div><br>

	        	<div class="btn-area">
		        	<%= link_to 'カートへ入れる', cart_items_path, class:"btn btn-warning" %>
				</div>

				<div class="row">
					<div class="col-xs-12">
						<% @product.disks.each do |disk| %>
							<table class="table table-striped">
								<thead>
									<tr>
										<th><%= "ディスク" + disk.id.to_s %></th>
									</tr>
								</thead>
								<tbody>
									<tr>
										<% disk.songs.each do |song| %>
											<td><%= song.song_name %></td>
										<% end %>
									</tr>
								</tbody>
							</table>
						<% end %>
					</div>
