<div class="container">
    <%= form_for(@product) do |f| %>

      <div class="field">
      	  <label>画像</label>
          <%= f.file_field :image_id %>
      </div>

      <div class="field">
          <label>商品名</label>
          <%= f.text_field :cd_name %>
      </div>

      <div class="field">
           <label>アーティスト名</label>
           <%= f.text_field :artist_name %>
        </div>

      <div class="field">
          <label>価格</label>
          <%= f.number_field :price %>
      </div>

      <div class="field">
          <label>レーベル名</label>
          <%= f.text_field :label_name %>
      </div>

        <div class="field">
          <label>ジャンル</label>
          <%= f.collection_select :genre_id [["POP", "1"], ["クラシック", "2"], ["ロック", "3"]], :prompt => "選択してください" %>
        </div>

      <%= f.fields_for :disks do |d| %>
        <div class="field">
            <label>ディスク番号</label>
            <%= d.text_field :disk_number %>
            <%= d.fields_for :songs do |s| %>
              <label>曲名</label>
              <%= s.text_field :song_name %>
              <% end %>
      </div>
      <% end %>

      <div class="field">
          <label>ステータス</label>
          <%= f.select :product_status [["販売中", "0"], ["販売停止中", "1"]], :prompt => "選択してください" %>
      </div>
    <%= f.submit '完了', class: 'btn btn-primary btn-block' %>
    <% end %>
</div>
