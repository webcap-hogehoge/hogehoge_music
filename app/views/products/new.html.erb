
<%= render "shared/header_admin_after_login" %>

<% if @product.errors.any? %>
<h3><%= @product.errors.count %>errors prohibited this obj from being saved:</h3>
<ul>
  <% @product.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>



<div class="container">
  <%= form_for(@product) do |f| %>

  <div class="field">
   <label>画像</label>
   <p><%= f.file_field :image_id %></p>
 </div>

 <div class="field">
  <label>商品名</label>
  <p><%= f.text_field :cd_name %></p>
</div>

<div class="field">
 <label>アーティスト名</label>
 <p><%= f.text_field :artist_name %></p>
</div>

<div class="field">
  <label>価格</label>
  <p><%= f.number_field :price, :value =>"" %></p>
</div>

<div class="field">
  <label>レーベル名</label>
  <p><%= f.text_field :label_name %></p>
</div>

<div class="field">
  <label>ジャンル</label>
  <p><%= f.select :genre_id, Genre.all.map{|g| [g.genre_name, g.id]}, :prompt => "選択してください" %></p>
</div>

<div class="field">
  <%= f.fields_for :disks do |d| %>
  <%= render 'disk_fields', f: d %>
  <% end %>
  <div class="links">
    <p><%= link_to_add_association 'ディスクを追加', f, :disks %></p>
  </div>
</div>

<div class="field">
  <label>ステータス</label>
  <p><%= f.select :product_status, [["販売中", "on_sale"], ["販売停止中", "not_on_sale"]], :prompt => "選択してください" %></p>
</div>
<p><%= f.submit '完了', class: 'btn btn-primary btn-lg' %></p>
<% end %>
</div>

<%= render "shared/footer_admin" %>