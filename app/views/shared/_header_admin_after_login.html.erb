
<header class="container-fluid" style="height:100px;">
	<div class="row" >
		<div class="col-xs-3">
			<%= link_to image_tag('logo.png', :size => '250x100'), admin_root_path %>
		</div>
		<div class="col-xs-4" style="height:100px;">
            <div class="col-xs-4">
            	<div class="searchbox" style="padding-top: 30px;width:100%;">
			    	<%= search_form_for @q, url: admin_root_path do |f| %>
			    	<%= f.text_field :cd_name_cont,placeholder: '検索する商品名を入力...' %>
                    <%= f.submit :class =>'search-btn' %>
			    </div>
            <% end %>
		    </div>
		</div>
		<div class="col-xs-5">
			<div class="row header-top" style="padding-top: 20px;">
			   <div class="col-xs-3"><%= link_to "注文依頼", admin_order_histories_path %></div>
			   <div class="col-xs-3"><%= link_to "入荷履歴", arrival_histories_path %></div>
		       <div class="col-xs-3"><%= link_to "新規商品追加", new_product_path %></div>
		       <div class="col-xs-3"><%= link_to "問い合わせ", "#" %></div>
		    </div>
		    <div class="row header-down" style="margin-top: 10px;">
               <div class="col-xs-4" style="text-align: center;"><%= link_to "商品一覧", admin_root_path %></div>
			   <div class="col-xs-4"><%= link_to "ユーザー一覧", end_users_path %></div>
		       <div class="col-xs-4"><%= link_to "ログアウト", destroy_administrator_session_path, method: :delete %></div>
		    </div>
    </div>
</header>
