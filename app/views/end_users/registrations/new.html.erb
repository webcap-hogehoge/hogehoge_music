<div style="margin: 50px 100px">
  <h2>会員登録</h2>
  <div style="padding-left: 50px">
    <%# 以下確認画面を作成するための実験中。成功したら決してよし%>
    <%#= form_for(resource, as: resource_name, url: registra tion_path(resource_name)) do |f| %>
    <%= form_for(resource, as: resource_name, url: {action: "confirm"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field signup_contents_name">
        <p style="display: inline-block; margin-right: 25px">名前</p>
        <div style="display: inline-block">
          <%= f.label :last_name_kanji, "(姓)" %><br />
          <%= f.text_field :last_name_kanji, autofocus: true %>
        </div>
        <div style="display: inline-block">
          <%= f.label :first_name_kanji, "(名)" %><br />
          <%= f.text_field :first_name_kanji %>
        </div>
      </div>

      <div class="field signup_contents_name">
        <p style="display: inline-block; margin-right: 25px">名前(カナ)</p>
        <div style="display: inline-block">
          <%= f.label :last_name_katakana, "(セイ)" %><br />
          <%= f.text_field :last_name_katakana, autofocus: true %>
        </div>
        <div style="display: inline-block">
          <%= f.label :first_name_katakana, "(メイ)" %><br />
          <%= f.text_field :first_name_katakana %>
        </div>
      </div>

      <div class="field signup_contents">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="field signup_contents">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上入力してください)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field signup_contents">
        <%= f.label :password_confirmation, "パスワード(確認)" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

<!-- 以下住所情報登録フォーム -->
      <%= f.fields_for :addresses, @end_user.addresses.build do |address| %>
        <div>
          <p style="display: inline-block; margin-right: 25px">郵便番号</p>
          <div style="display: inline-block">
            <%= address.label :postal_code_1, "〒" %>
            <%= address.text_field :postal_code_1 %>
          </div>
          <div style="display: inline-block">
            <%= address.label :postal_code_2, "-" %>
            <%= address.text_field :postal_code_2 %>
          </div>
        </div>
        <div class="field signup_contents">
          <%= address.label :address, "住所" %>
          <%= address.text_field :address %>
        </div>
        <div class="field signup_contents">
          <%= address.label :telephone_number, "電話番号" %>
          <%= address.text_field :telephone_number %>
        </div>
      <% end %>

      <div class="actions signup_contents">
        <%= f.submit "登録最終確認へ" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>