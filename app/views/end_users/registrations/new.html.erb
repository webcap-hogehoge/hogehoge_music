<div style="margin: 50px 100px">
  <h2>会員登録</h2>
  <div style="padding-left: 50px">
    <%# 以下確認画面を作成するための実験中。成功したら決してよし%>
    <%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= form_for @end_user, url: {action: "confirm"} do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field signup_contents_name">
        <p style="display: inline-block; margin-right: 50px">名前</p>
        <div style="display: inline-block">
          <%= f.label :last_name_kanji, "(姓)" %><br />
          <%= f.text_field :last_name_kanji, autofocus: true %>
        </div>
        <div style="display: inline-block">
          <%= f.label :first_name_kanji, "(名)" %><br />
          <%= f.text_field :first_name_kanji %>
        </div>
      </div>

      <div class="field signup_contents_name">
        <p style="display: inline-block; margin-right: 50px">名前(カナ)</p>
        <div style="display: inline-block">
          <%= f.label :last_name_katakana, "(セイ)" %><br />
          <%= f.text_field :last_name_katakana, autofocus: true %>
        </div>
        <div style="display: inline-block">
          <%= f.label :first_name_katakana, "(メイ)" %><br />
          <%= f.text_field :first_name_katakana %>
        </div>
      </div>

      <div class="field signup_contents">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="field signup_contents">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field signup_contents">
        <%= f.label :password_confirmation, "パスワード(確認)" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions signup_contents">
        <%= f.submit "登録最終確認へ" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>