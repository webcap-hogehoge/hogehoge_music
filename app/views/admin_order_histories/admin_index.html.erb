<!-- タブの中身 -->
<!-- 全体 -->
<div class="tab-content">
	<div class="tab-pane fade in active" id="all">
	  <div class="container">
           <table class="table table-admin-index table-borderless">
            <% @order_histories.each do |order| %>
              <tbody>
                <tr>
                   <th scope="row" class="admin_order_history">購入者名</th>
                   <td><%= order.end_user.last_name_kanji %><%= order.end_user.first_name_kanji %></td>
                </tr>
                <tr>
                   <th scope="row">購入日時</th>
                   <td><%= l order.created_at %></td>
                </tr>
                <tr>
                   <th scope="row">購入内容</th>
                   <td><% order.order_details.each do |d|%>
                     <span>商品名 : </span><%= d.product.cd_name %>
                     <br><span>総枚数 : </span><%= d.product_number %><span>  枚</span>
                     <% end %>
                   </td>
                </tr>
                <tr>
                   <th scope="row">購入金額</th>
                   <td><span>小計 ¥</span>
                    <br><span>消費税 ¥</span>
                    <br><span>配送料 ¥</span>
                    <br><span>購入総計 ¥</span>
                  </td>
                </tr>
                <tr>
                   <th scope="row">送付先</th>
                   <td><%= order.last_name_kanji %><%= order.first_name_kanji %>
                    <br><span>〒</span><%= order.postal_code_1%><span>-</span><%= order.postal_code_2%><%= order.address %></td>
                </tr>
                <tr>
                   <th rowspan="2">ステータス</th>
                   <td rowspan="2"><%= order.order_status_i18n %></td>
                </tr>
              </tbody>
          <% end %>
           </table>
      </div>
　  </div>
