<!-- ヘッダー  -->
<% if end_user_signed_in? %>
<%= render "shared/header_admin_after_login" %>
<% else %>
<%= render "shared/header_admin_before_login" %>
<% end %>
<!-- ヘッダーここまで -->


<!-- ナビゲーション -->
<div class="container">
  <ul class="nav nav-tabs nav-justified">
    <li class="nav-item active">
		  <a class="nav-link active" data-toggle="tab" href="#all">全体</a>
	  </li>
    <li class="nav-item">
    	<a class="nav-link" data-toggle="tab" href="#accepting">受付中</a>
    </li>
    <li class="nav-item">
    	<a class="nav-link" data-toggle="tab" href="#preparing">出荷準備中</a>
    </li>
    <li class="nav-item">
    	<a class="nav-link" data-toggle="tab" href="#finished">出荷済</a>
    </li>
  </ul>
</div>
<!-- タブの中身 -->
<!-- 全体 -->
<div class="tab-content">
	<div class="tab-pane fade in active" id="all">
	  <div class="container">
           <table class="table table-borderless">
            <% @order_histories.each_with_index do |order, i| %>
              <% if i.to_i % 2 == 0 %>
                  <tbody class="test">
                    <tr>
                       <th scope="row">購入者名</th>
                       <td><%= order.end_user.last_name_kanji %><%= order.end_user.first_name_kanji %></td>
                    </tr>
                    <tr>
                       <th scope="row">購入日時</th>
                       <td><%= l order.created_at %></td>
                    </tr>
                    <tr>
                       <th scope="row">購入内容</th>
                          <td>
                            <% order.order_details.each do |d|%>
                              <p>商品名 : <%= d.product.cd_name %><span>  単価: ¥ <%= d.unit_price %></span></p>
                              <p>枚数:<%= d.product_number %>  枚</p>
                            <% end %>
                          </td>
                    </tr>
                    <tr>
                       <th scope="row">購入金額</th>
                       <td>
                        <p>合計 ¥<%= order.subtotal %></p>
                        <p>消費税 ¥<%= order.tax %></p>
                        <p>配送料 ¥<%= order.delivery_fee %></p>
                        <p>購入総計 ¥<%= order.total_price %></p>
                      </td>
                    </tr>
                    <tr>
                       <th scope="row">送付先</th>
                       <td>
                         <p><%= order.last_name_kanji %><%= order.first_name_kanji %>  〒<%= order.postal_code_1%>-<%= order.postal_code_2%><%= order.address %></p>
                        </td>
                    </tr>
                    <tr>
                       <th rowspan="2">ステータス</th>
                       <td rowspan="2"><%= order.order_status_i18n %></td>
                    </tr>
                  </tbody>
              <% end %>
          <% end %>
           </table>
      </div>
　  </div>
