<!-- ヘッダー  -->
<% if end_user_signed_in? %>
<%= render "shared/header_user_after_login" %>
<% else %>
<%= render "shared/header_user_before_login" %>
<% end %>
<!-- ヘッダーここまで -->
<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>


<h1>ショッピングカート</h1>
    <div class="col-xs-9">
        <% @cart_items.each do |cart_item| %>
        <div class="row item_box">
            <div class="col-xs-5 image">
                <%= image_tag cart_item.product.image_id.to_s %>
            </div>
            <div class="col-xs-7 info">
                <h4 class="name"><%= cart_item.product.cd_name%></h4>
                <li class="num">
                    <p>
                       計 <%= cart_item.product_number %> 個
                    </p>
                </li>
                <li class="edit">
                    <%= link_to '編集', edit_cart_item_path(cart_item.id), class:"btn-sm btn-success" %>
                </li>
                <li class="destroy">
                    <%= link_to '削除', cart_item_path(cart_item.id), method: :delete %>
                </li>
                <% sum = cart_item.product.price * cart_item.product_number * 1.08 %>
                <li class="price">価格<br><%= number_to_currency(sum.floor) %>(税込)</li>
            </div>
        </div>
        <% end %>
    </div>

    <div class="col-xs-2">
        <div class="box1">
            <% @subtotal = 0 %>
            <% @cart_items.each do |cart_item| %>
            <%  @subtotal += (cart_item.product.price * cart_item.product_number) %>
            <% end %>
            <p>小計　<%= number_to_currency(@subtotal) %></p>
            <p><% sum = @subtotal * 0.08 %></p>
            <p>税   <%= number_to_currency(sum.floor) %></p>
            <p><% sum = @subtotal * 1.08 + 500  %></p>
            <p>合計　<%= number_to_currency(sum.floor) %></p>
            <%= link_to  '注文画面へ進む', new_order_history_path,  class: " btn btn-primary" %>
        </div>
    </div>


<!-- フッター -->
<% if end_user_signed_in? %>
<%= render "shared/footer_user_after_login" %>
<% else %>
<%= render "shared/footer_user_before_login" %>
<% end %>